# vim:syntax=sh
#
# library of shell functions
#

shlib_relToAbsPath()
{
  _shlib_path=$1

  # deal with paths that start with /
  echo "${_shlib_path}" |grep '^/' >/dev/null 2>&1
  if [ $? -ne 0 ]; then
    _shlib_pwd=`pwd`
    _shlib_path="${_shlib_pwd}/${_shlib_path}"
    unset _shlib_pwd
  fi

  # clean up the path
  echo "${_shlib_path}" |sed -r 's/[^/]*\/+\.{2}\/*//g;s/\.\///;s/\/+$//'

  unset _shlib_path
}
